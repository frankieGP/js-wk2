{{#if editQuestionForm}}
  <h4>Edit {{question.author}}'s {{question.content}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="notes">Topic</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>



      <button {{action 'edit' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editQuestionForm'}}>Edit</button>
  <!-- <button {{action 'delete' question}}>Delete</button> -->

{{/if}}
