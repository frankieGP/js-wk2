{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="answerauthor">Author</label>
        {{input value=answerauthor id="answerauthor"}}
      </div>

      <div class="form-group">
        <label for="answercontent">Content</label>
        {{input value=answercontent id="answercontent"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
