{{#if addNewQuestion}}
<h1>New Rental</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Your name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">What topic is this?</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>

  {{/if}}
